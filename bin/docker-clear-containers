#!/usr/bin/python

import argparse
import datetime
import getpass
import grp
import json
import os
import re
import socket
import subprocess
import sys


GREEN = '\033[92m'
YELLOW = '\033[93m'
RED = '\033[91m'
RESET = '\033[0m'

NEED_SUDO = True


def init():
    global NEED_SUDO
    user = getpass.getuser()
    if user == 'root' or user in grp.getgrnam('docker').gr_mem:
        NEED_SUDO = False


def build_docker_args(args):
    cmd = ('docker',) + args
    if NEED_SUDO:
        cmd = ('sudo',) + cmd
    return cmd


